.select
    position relative

.select.active .select-arrow
    transform rotate(180deg)

.select select
    display none !important

.select-button
    position relative
    cursor pointer

    .label--notinput
        cursor pointer

.select-arrow
    position absolute
    top 50%
    right 0
    margin-top -7px
    display block
    width 50px
    height 14px
    content ''
    background url('/img/icons/icon-arrow-select.svg') center center no-repeat
    background-size contain
    transition all .2s ease-in-out

.select-value
    padding 0 50px 0 15px
    display block
    overflow hidden
    width 100%
    height 44px
    line-height 42px
    white-space nowrap
    text-overflow ellipsis
    cursor pointer
    border 1px solid #ccc
    border-radius 4px
    -ms-text-overflow ellipsis

.select-dropdown
    position absolute
    z-index 50
    top 100%
    margin-top 10px
    padding 7px 0
    overflow auto
    width 100%
    max-height 300px
    background #fff
    border-radius 4px
    box-shadow 0 0 15px rgba(0, 0, 0, .1)

.select-option
    padding 7px 16px
    cursor pointer
    transition all .2s ease-in-out

.select-option:hover
    background #f5f5f5

.select-option.active
    font-weight 700

